generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Waypoint {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  route FlightRoute @relation(fields: [routeId], references: [id])
  routeId String @db.ObjectId
  lat Float
  lng Float
  alt Float
}

model FlightRoute {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  waypoints Waypoint[]
}